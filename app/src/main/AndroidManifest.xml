<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.osbornroad.cycletime">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StopWatchActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmployeeChooseActivity"
            android:label="@string/choose_employee"
            android:parentActivityName=".StopWatchActivity"></activity>
        <activity
            android:name=".ProcessChooseActivity"
            android:label="@string/choose_process"
            android:parentActivityName=".StopWatchActivity"></activity>
    </application>

</manifest>