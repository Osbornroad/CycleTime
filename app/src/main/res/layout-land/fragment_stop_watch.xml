<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- COMPLETED (2) Replace the Relative layout with a ConstraintLayout -->
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/time_running_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:textSize="60sp"
            android:fontFamily="sans-serif-light"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_start"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/time_running_view"
            app:layout_constraintTop_toBottomOf="@+id/time_running_view"
            android:padding="0dp"/>

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_reset"
            app:layout_constraintRight_toRightOf="@+id/time_running_view"
            app:layout_constraintTop_toTopOf="@id/start_button"
            android:padding="0dp"/>

        <ImageView
            android:id="@+id/line_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="@id/time_running_view"
            app:layout_constraintLeft_toRightOf="@id/time_running_view"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/colorLinePrimary"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/employee_name"
            android:text="@string/name_employee"
            app:layout_constraintLeft_toLeftOf="@+id/line_1"
            app:layout_constraintTop_toBottomOf="@+id/line_1"
            style="@style/StopwatchFragTextViewTitle"/>

        <ImageView
            android:id="@+id/line_2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/employee_name"
            app:layout_constraintLeft_toLeftOf="@id/line_1"
            app:layout_constraintRight_toRightOf="@id/line_1"
            android:background="@color/colorLinePrimary"/>

        <ImageView
            android:id="@+id/line_3"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/employee_name"
            app:layout_constraintTop_toBottomOf="@id/line_1"
            app:layout_constraintBottom_toTopOf="@id/line_2"
            android:background="@null"/>

        <TextView
            android:id="@+id/employee_name_data"
            style="@style/StopwatchFragTextViewInfo"
            app:layout_constraintBaseline_toBaselineOf="@id/employee_name"
            app:layout_constraintLeft_toRightOf="@id/line_3"
            app:layout_constraintRight_toRightOf="@id/line_1"/>

        <TextView
            android:id="@+id/process_name"
            android:text="@string/name_process"
            app:layout_constraintLeft_toLeftOf="@+id/line_1"
            app:layout_constraintTop_toBottomOf="@+id/line_2"
            style="@style/StopwatchFragTextViewTitle"/>

        <TextView
            android:id="@+id/process_name_data"
            style="@style/StopwatchFragTextViewInfo"
            app:layout_constraintBaseline_toBaselineOf="@id/process_name"
            app:layout_constraintLeft_toRightOf="@id/line_3"
            app:layout_constraintRight_toRightOf="@id/line_1"/>

        <ImageView
            android:id="@+id/line_4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/process_name"
            app:layout_constraintLeft_toLeftOf="@id/line_1"
            app:layout_constraintRight_toRightOf="@id/line_1"
            android:background="@color/colorLinePrimary"/>

        <ImageView
            android:id="@+id/line_5"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/employee_name"
            app:layout_constraintTop_toBottomOf="@id/line_3"
            app:layout_constraintBottom_toTopOf="@id/line_4"
            android:background="@null"/>

        <TextView
            android:id="@+id/machine_name"
            android:text="@string/name_machine"
            app:layout_constraintLeft_toLeftOf="@+id/line_1"
            app:layout_constraintTop_toBottomOf="@+id/line_4"
            style="@style/StopwatchFragTextViewTitle"/>

        <TextView
            android:id="@+id/machine_name_data"
            style="@style/StopwatchFragTextViewInfo"
            app:layout_constraintBaseline_toBaselineOf="@id/machine_name"
            app:layout_constraintLeft_toRightOf="@id/line_3"
            app:layout_constraintRight_toRightOf="@id/line_1"/>

        <ImageView
            android:id="@+id/line_6"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/machine_name"
            app:layout_constraintLeft_toLeftOf="@id/line_1"
            app:layout_constraintRight_toRightOf="@id/line_1"
            android:background="@color/colorLinePrimary"/>

        <ImageView
            android:id="@+id/line_7"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/employee_name"
            app:layout_constraintTop_toBottomOf="@id/line_4"
            app:layout_constraintBottom_toTopOf="@id/line_6"
            android:background="@null"/>

        <TextView
            android:id="@+id/part_number_name"
            android:text="@string/name_part_number"
            app:layout_constraintLeft_toLeftOf="@+id/line_1"
            app:layout_constraintTop_toBottomOf="@+id/line_6"
            style="@style/StopwatchFragTextViewTitle"/>


        <TextView
            android:id="@+id/part_name_data"
            style="@style/StopwatchFragTextViewInfo"
            app:layout_constraintBaseline_toBaselineOf="@id/part_number_name"
            app:layout_constraintLeft_toRightOf="@id/line_3"
            app:layout_constraintRight_toRightOf="@id/line_1"/>

        <ImageView
            android:id="@+id/line_8"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/part_number_name"
            app:layout_constraintLeft_toLeftOf="@id/line_1"
            app:layout_constraintRight_toRightOf="@id/line_1"
            android:background="@color/colorLinePrimary"/>

        <ImageView
            android:id="@+id/line_9"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/employee_name"
            app:layout_constraintTop_toBottomOf="@id/line_6"
            app:layout_constraintBottom_toTopOf="@id/line_8"
            android:background="@null"/>

        <TextView
            android:id="@+id/part_qty"
            android:text="@string/qty_parts"
            app:layout_constraintLeft_toLeftOf="@+id/line_1"
            app:layout_constraintTop_toBottomOf="@+id/line_8"
            style="@style/StopwatchFragTextViewTitle"/>

        <EditText
            android:id="@+id/part_qty_data"
            android:hint="@string/input_number"
            android:textColorHint="@color/result_no_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColor="@color/result_exists_data"
            android:inputType="numberDecimal"
            android:imeOptions="actionSend"
            android:fontFamily="sans-serif-light"
            android:cursorVisible="false"
            android:background="@color/colorEditText"
            android:textCursorDrawable="@null"
            app:layout_constraintBaseline_toBaselineOf="@id/part_qty"
            app:layout_constraintLeft_toRightOf="@id/line_3"
            app:layout_constraintRight_toRightOf="@id/line_1"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <ImageView
            android:id="@+id/line_10"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/part_qty"
            app:layout_constraintLeft_toLeftOf="@id/line_1"
            app:layout_constraintRight_toRightOf="@id/line_1"
            android:background="@color/colorLinePrimary"/>

        <ImageView
            android:id="@+id/line_11"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/employee_name"
            app:layout_constraintTop_toBottomOf="@id/line_8"
            app:layout_constraintBottom_toTopOf="@id/line_10"
            android:background="@null"/>


    </android.support.constraint.ConstraintLayout>

</ScrollView>
