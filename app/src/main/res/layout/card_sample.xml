<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius="4dp">

   <android.support.constraint.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="7dp">

       <ImageView
           android:id="@+id/sample_line_1"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           style="@style/SampleFragLines"
           android:layout_marginRight="110dp"
           android:background="@null"/>

       <TextView
           android:id="@+id/sample_part_title"
           android:text="@string/name_part_number"
           style="@style/SampleFragTextViewTitle"
           card_view:layout_constraintLeft_toLeftOf="@+id/sample_line_1"
           card_view:layout_constraintTop_toBottomOf="@+id/sample_line_1" />

       <TextView
           android:id="@+id/sample_part_name"
           style="@style/SampleFragTextViewInfo"
           card_view:layout_constraintBaseline_toBaselineOf="@id/sample_part_title"
           card_view:layout_constraintLeft_toRightOf="@id/sample_part_title"
           tools:text="Part"/>

       <ImageView
           android:id="@+id/sample_line_2"
           app:layout_constraintLeft_toLeftOf="@id/sample_line_1"
           app:layout_constraintRight_toRightOf="@id/sample_line_1"
           app:layout_constraintTop_toBottomOf="@id/sample_part_title"
           style="@style/SampleFragLines"
           />

       <TextView
           android:id="@+id/sample_machine_title"
           android:text="@string/name_machine"
           style="@style/SampleFragTextViewTitle"
           card_view:layout_constraintLeft_toLeftOf="@+id/sample_line_1"
           card_view:layout_constraintTop_toBottomOf="@+id/sample_line_2"/>

       <TextView
           android:id="@+id/sample_machine_name"
           style="@style/SampleFragTextViewInfo"
           card_view:layout_constraintBaseline_toBaselineOf="@id/sample_machine_title"
           card_view:layout_constraintLeft_toRightOf="@id/sample_part_title"
           tools:text="Workplace"/>

       <ImageView
           android:id="@+id/sample_line_3"
           app:layout_constraintLeft_toLeftOf="@id/sample_line_1"
           app:layout_constraintRight_toRightOf="@id/sample_line_1"
           app:layout_constraintTop_toBottomOf="@id/sample_machine_title"
           style="@style/SampleFragLines"
           />

       <TextView
           android:id="@+id/sample_process_title"
           android:text="@string/name_process"
           style="@style/SampleFragTextViewTitle"
           card_view:layout_constraintLeft_toLeftOf="@+id/sample_line_1"
           card_view:layout_constraintTop_toBottomOf="@+id/sample_line_3"/>

       <TextView
           android:id="@+id/sample_process_name"
           style="@style/SampleFragTextViewInfo"
           card_view:layout_constraintBaseline_toBaselineOf="@id/sample_process_title"
           card_view:layout_constraintLeft_toRightOf="@id/sample_part_title"
           tools:text="Process"/>

       <ImageView
           android:id="@+id/sample_line_4"
           app:layout_constraintLeft_toLeftOf="@id/sample_line_1"
           app:layout_constraintRight_toRightOf="@id/sample_line_1"
           app:layout_constraintTop_toBottomOf="@id/sample_process_title"
           style="@style/SampleFragLines"
           />

       <TextView
           android:id="@+id/sample_employee_title"
           android:text="@string/name_employee"
           card_view:layout_constraintLeft_toLeftOf="@+id/sample_line_1"
           card_view:layout_constraintTop_toBottomOf="@+id/sample_line_4"
           style="@style/SampleFragTextViewTitle" />

       <TextView
           android:id="@+id/sample_employee_name"
           style="@style/SampleFragTextViewInfo"
           card_view:layout_constraintBaseline_toBaselineOf="@id/sample_employee_title"
           card_view:layout_constraintLeft_toRightOf="@id/sample_part_title"
           tools:text="Employee"/>

       <ImageView
           android:id="@+id/sample_line_5"
           app:layout_constraintLeft_toLeftOf="@id/sample_line_1"
           app:layout_constraintRight_toRightOf="@id/sample_line_1"
           app:layout_constraintTop_toBottomOf="@id/sample_employee_title"
           style="@style/SampleFragLines"
           />

       <TextView
           android:id="@+id/sample_quantity_title"
           android:text="@string/qty_parts"
           style="@style/SampleFragTextViewTitle"
           card_view:layout_constraintLeft_toLeftOf="@+id/sample_line_1"
           card_view:layout_constraintTop_toBottomOf="@+id/sample_line_5" />

       <TextView
           android:id="@+id/sample_quantity"
           style="@style/SampleFragTextViewInfo"
           card_view:layout_constraintBaseline_toBaselineOf="@id/sample_quantity_title"
           card_view:layout_constraintLeft_toRightOf="@id/sample_part_title"
           tools:text="Quantity"/>

       <ImageView
           android:id="@+id/sample_line_6"
           app:layout_constraintLeft_toLeftOf="@id/sample_line_1"
           app:layout_constraintRight_toRightOf="@id/sample_line_1"
           app:layout_constraintTop_toBottomOf="@id/sample_quantity_title"
           style="@style/SampleFragLines"
           android:background="@null"
           />

       <ImageView
           android:id="@+id/sample_cycletime_box"
           android:layout_width="100dp"
           android:layout_height="0dp"
           android:background="@color/colorLinePrimary"
           card_view:layout_constraintRight_toRightOf="parent"
           card_view:layout_constraintTop_toTopOf="parent"
           card_view:layout_constraintBottom_toTopOf="@id/sample_line_5"
           android:layout_marginRight="5dp"/>

       <ImageView
           android:id="@+id/sample_cycletime_title"
           android:layout_width="0dp"
           android:layout_height="0dp"
           card_view:layout_constraintTop_toTopOf="@id/sample_cycletime_box"
           card_view:layout_constraintLeft_toLeftOf="@id/sample_cycletime_box"
           card_view:layout_constraintBottom_toBottomOf="@id/sample_line_2"
           card_view:layout_constraintRight_toRightOf="@id/sample_cycletime_box"
           android:background="@color/colorPrimary"/>

       <TextView
           android:id="@+id/sample_cycletime_result"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/sample_cycletime_title"
           app:layout_constraintLeft_toLeftOf="@id/sample_cycletime_box"
           app:layout_constraintBottom_toBottomOf="@id/sample_cycletime_box"
           app:layout_constraintRight_toRightOf="@id/sample_cycletime_box"
           android:textColor="@android:color/black"
           tools:text="00:00:00"
           android:lines="1"
           android:textSize="22sp"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="@id/sample_cycletime_title"
           app:layout_constraintLeft_toLeftOf="@id/sample_cycletime_title"
           app:layout_constraintBottom_toBottomOf="@id/sample_cycletime_title"
           app:layout_constraintRight_toRightOf="@id/sample_cycletime_title"
           android:textColor="@android:color/white"
           android:text="@string/sample_cycletime_title"
           android:textSize="10sp"
           />

       <ImageView
           android:id="@+id/sample_date_time_box"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:background="@color/colorLinePrimary"
           app:layout_constraintTop_toBottomOf="@id/sample_line_5"
           app:layout_constraintLeft_toLeftOf="@id/sample_cycletime_box"
           app:layout_constraintBottom_toBottomOf="@id/sample_line_6"
           app:layout_constraintRight_toRightOf="@id/sample_cycletime_box"/>

       <TextView
           android:id="@+id/sample_start_date_time"
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:gravity="center_vertical"
           app:layout_constraintTop_toTopOf="@id/sample_date_time_box"
           app:layout_constraintLeft_toLeftOf="@id/sample_date_time_box"
           app:layout_constraintBottom_toBottomOf="@id/sample_date_time_box"
           app:layout_constraintRight_toRightOf="@id/sample_date_time_box"
           android:textColor="@android:color/black"
           tools:text="00-00-0000"
           android:textSize="7sp"/>

   </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>